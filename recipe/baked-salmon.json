  "instructions": [
    {
      "step": 1,
      "description": "Preheat oven to 375°F (190°C)."
    },
    {
      "step": 2,
      "description": "Line a baking sheet with parchment paper or aluminum foil."
    },
    {
      "step": 3,
      "description": "Place salmon fillets on the baking sheet, skin side down."
    },
    {
      "step": 4,
      "description": "In a small bowl, mix olive oil, minced garlic, dill, parsley, salt, pepper, and paprika."
    },
    {
      "step": 5,
      "description": "Brush the mixture over the salmon fillets."
    },
    {
      "step": 6,
      "description": "Place lemon slices on top and around the salmon. Sprinkle with capers if using."
    },
    {
      "step": 7,
      "description": "Bake for 12-15 minutes, until salmon flakes easily with a fork."
    },
    {
      "step": 8,
      "description": "Garnish with additional fresh herbs if desired and serve immediately."
